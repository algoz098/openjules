{
  "name": "openjules-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "concurrently \"npm run dev -w @openjules/backend\" \"npm run dev -w @openjules/frontend\" -c \"blue,green\" --kill-others --names \"BACKEND,FRONTEND\"",
    "lint": "npm run lint --workspaces",
    "test": "vitest run"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.0.0"
  },
  "overrides": {
    "pinia": "2.3.1",
    "vue-router": "4.6.4"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "packageManager": "npm@10.0.0"
}